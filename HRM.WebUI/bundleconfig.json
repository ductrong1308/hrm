// Configure bundling and minification for the project.
// More info at https://go.microsoft.com/fwlink/?LinkId=808241
[
    {
        "outputFileName": "wwwroot/site.min.css",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [ "wwwroot/styles.*.css" ]
    },
    {
        "outputFileName": "wwwroot/main.min.js",
        // An array of relative input file paths. Globbing patterns supported
        "inputFiles": [ "wwwroot/main.*.js" ]
    },
    {
        "outputFileName": "wwwroot/site.min.js",
        "inputFiles": [ "wwwroot/runtime.*.js", "wwwroot/polyfills.*.js", "wwwroot/vendor.*.js" ],
        // Optionally specify minification options
        "minify": {
            "enabled": true,
            "renameLocals": true
        },
        // Optionally generate .map file
        "sourceMap": false
    }
]
